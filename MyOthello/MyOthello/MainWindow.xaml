<Window x:Class="MyOthello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyOthello"
        mc:Ignorable="d"
        Title="OthelloMainMenu" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="Title" HorizontalAlignment="Left" TextWrapping="Wrap" Text="OTHELLO" VerticalAlignment="Top" Height="93" Width="792" TextAlignment="Center" FontSize="82"/>
        <TextBlock x:Name="Subtitle" HorizontalAlignment="Left" Height="44" Margin="185,126,0,0" TextWrapping="Wrap" Text="Do you want to fight a Human, a Computer, or an Alien?" VerticalAlignment="Top" Width="457" TextAlignment="Center"/>
        <Button x:Name="human" Content="Human" HorizontalAlignment="Left" Margin="57,231,0,0" VerticalAlignment="Top" Width="133" Height="130" Click="human_Click"/>
        <Button x:Name="computer" Content="Computer" HorizontalAlignment="Left" Margin="333,231,0,0" VerticalAlignment="Top" Width="133" Height="130"  Click="computer_Click"/>
        <Button x:Name="alien" Content="Alien" HorizontalAlignment="Left" Margin="603,231,0,0" VerticalAlignment="Top" Width="133" Height="130" Click="alien_Click"/>

    </Grid>
</Window>
